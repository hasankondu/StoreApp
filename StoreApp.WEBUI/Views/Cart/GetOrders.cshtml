@model List<OrderListModel>
@{
    ViewData["Title"] = "GetOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Siparişlerim</h2>
<hr />

@foreach (var order in Model)
{
    <table class="table table-bordered table-sm mb-3">
        <thead class="bg-primary">
            <tr>
                <td colspan="2">Order Number: #@order.OrderNumber</td>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in order.OrderItems)
            {
            <tr>
                <td style="width:60px">
                    <img src="~/images/products/@orderItem.ImageUrl" width="100" />
                </td>
                <td>
                    @orderItem.ProductName
                </td>
                <td>
                    @orderItem.UnitPrice
                </td>
                <td>
                    @orderItem.Quantity
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">Müşteri Adı:</td>
                <td>@order.FirstName @order.LastName</td>
                <td>Toplam Fiyat: @order.TotalPrice()</td>
            </tr>
            <tr>
                <td colspan="2">Adres:</td>
                <td>@order.Address</td>
            </tr>
            <tr>
                <td colspan="2">Telefon:</td>
                <td>@order.Phone</td>
            </tr>
            <tr>
                <td colspan="2">Email:</td>
                <td>@order.Email</td>
            </tr>
            <tr>
                <td colspan="2">Ödeme Tipi:</td>
                <td>@order.PaymentTypes</td>
            </tr>
            <tr>
                <td colspan="2">Sipariş Durumu:</td>
                <td>@order.OrderStatus</td>
            </tr>
        </tfoot>
    </table>

    <br />
    <br />
}